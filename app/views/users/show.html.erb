      <div class="grandma-pic" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
      url('<%= cl_image_path booking.grandma.avatar, height: 300, width: 400 %>')"></div>
      <div class="card-grandmother-infos">
        <div>
          <h2><a href="<%="profile/bookings/#{booking.id}"%>"><%= booking.grandma.first_name %> <%= booking.grandma.last_name %> <%= booking.grandma.age %></a></h2>
          <p><%= booking.start_date %> - <%= booking.end_date %></p>
        </div>
      </div>
    </div>
    <% end %>
  </div>
</div>
<hr>
<% end %>

