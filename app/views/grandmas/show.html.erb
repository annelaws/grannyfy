<h1>Book your grandma moment</h1>
<p>Find me in app/views/grandmas/show.html.erb</p>

<div
  id="map"
  style="width: 45%;
  height: 38%;"
  data-markers="<%= @marker.to_json %>"
  data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
></div>

<%= simple_form_for([@grandma, @booking]) do |f| %>
  <div class="form-group">
    <%= f.input :start_date, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.input :end_date, class: 'form-control' %>
  </div>


  <%= f.submit class: 'btn btn-primary' %>
<% end %>
