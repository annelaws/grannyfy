<div class="wrapper">
  <%= form_tag grandmas_path, method: :get do %>
  <%= text_field_tag :query,
  params[:query],
  class: "form-control",
    placeholder: "Find a grandma"
    %>
    <%= submit_tag "Search", class: "btn btn-primary" %>
    <% end %>

  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8 py-4">
        <div class="row">
          <% @grandmas.each do |grandma| %>
           <div class="col-md-6 col-lg-4">
            <a href="<%="/grandmas/#{grandma.id}"%>">
            <div class=" card-grandmother">
              <div class="grandma-pic" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)),
              url('<%= cl_image_path grandma.avatar, height: 300, width: 400 %>')"></div>
                <div class="card-grandmother-infos">
                  <div>
                    <h2><%= grandma.first_name %> <%= grandma.last_name %> <%= grandma.age %></h2>
                    <p>
                    <% grandma.skills.each do |skill| %>
                    <span><%= skill.name %> | </span>
                    <% end %>
                    </p>
                  </div>
                 </div>
                </div>
              </div>
             </a>
            <% end  %>
           </div>
          </div>
        <div class="col-md-4">
          <div
            id="map"
            style="width: 100%;
            height: 100vh;"
            data-markers="<%= @markers.to_json %>"
            data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>">
          </div>
         </div>
    </div>
  </div>




